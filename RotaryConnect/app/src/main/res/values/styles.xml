<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>

    <style name="popup_window_animation_phone">
        <item name="android:windowEnterAnimation">@anim/fade_in_animation</item>
    </style>

    <style name="popup_window_close_animation_phone">
        <item name="android:windowEnterAnimation">@anim/fade_out_animation</item>
    </style>

    <style name="mySpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#ccc</item>
        <item name="android:dividerHeight">0.4dp</item>
    </style>

</resources>
