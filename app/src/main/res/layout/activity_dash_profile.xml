<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#61313e60"
    android:layout_height="match_parent"
    tools:context="com.android.aquagiraffe.rotaryconnect.DashProfileActivity">



    <android.support.v7.widget.Toolbar
        xmlns:app="schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bd182249"
        app:contentInsetLeft="0dp"
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp" >


        <ImageView
            android:id="@+id/imgback"
            android:background="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="25dp"
            android:background="@drawable/crossroads"
            android:layout_width="50dp"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/txtAppbar"
            android:layout_marginLeft="5dp"
            android:text="RC Thane Premium\nProfile"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>




    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_below="@+id/toolbar"
        android:background="#90313e60"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile_image"
            app:border_color="#ffffff"
            app:border_width="1.6dp" />
        <ImageView
            android:id="@+id/imgEdit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/edit"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtProfilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:textSize="18dp"
            android:textColor="#ffff"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/imgProfile"
            android:text="sachin" />

        <TextView
            android:id="@+id/txtRctpid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#ffff"
            android:layout_below="@+id/txtProfilename"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/imgProfile"
            android:text="15864646" />

    </RelativeLayout>






    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTop"
        >


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:fillViewport="false"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="Contact Number"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtContact"
                        android:layout_width="322dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="18sp"
                        android:text="+91 9821831167"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>



                <LinearLayout
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line3"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/doj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="Date of Birth"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtDOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="28 Years"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/lineage"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/line4"
                    android:layout_height="70sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="age"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtAge"
                        android:layout_width="322dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="18sp"
                        android:text="26"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/lineage"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sachin5470@gmail.com"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_below="@+id/email"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignLeft="@+id/email"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line6"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:text="Organization Name"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:id="@+id/txtOrnName"
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:text="Aqua-Giraffe Technologies Pvt. Ltd." />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/line8"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line7"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/manager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:text="Classification"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:id="@+id/txtClassification1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="IT-Core Banking"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line9"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line8"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtVocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:text="Vocation"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:id="@+id/txtVocation1"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="Software Developer"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line10"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line9"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtSubVocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:text="Sub-Vocation"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:id="@+id/txtSubVocation1"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="Android Developer"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line11"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line10"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtSpouseName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:text="Spouse Name"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:id="@+id/txtSpouseName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="Neeta Nerurkar"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line12"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line11"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtSpouseGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:text="Spouse Gender"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:id="@+id/txtSpouseGender1"
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="Female"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line13"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line12"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtSpouseContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:text="Spouse Contact"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:id="@+id/txtSpouseContact1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="+91 9893284963"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line14"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line13"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtSpouseBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:text="Spouse Birthday"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:id="@+id/txtSpouseBirthday1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="24/04/1973"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line15"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_below="@+id/line14"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtAnniversaryDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:text="Anniversary Date"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtAnniversaryDate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:paddingBottom="10dp"
                        android:text="11/04/1998" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/line16"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/line15"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtKidsDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:text="Kids Details"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtKidsDetails1"
                        android:layout_weight="4"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="details"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/corners"
                    android:layout_below="@+id/line16"
                    android:layout_height="match_parent">
                    <ListView
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="1dp"
                        android:nestedScrollingEnabled="true"
                        tools:ignore="NotSibling">

                    </ListView>

                </LinearLayout>






            </RelativeLayout>
        </ScrollView>
        <include layout="@layout/footer"
            />

    </RelativeLayout>


</RelativeLayout>