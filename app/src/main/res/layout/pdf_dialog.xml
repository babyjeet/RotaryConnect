<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_box_shape"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imgCross"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_cancel_black_24dp"
        android:layout_marginTop="8dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <EditText
        android:id="@+id/edtPdfName"
        android:layout_below="@+id/imgCross"
        android:layout_margin="15dp"
        android:singleLine="true"
        android:background="@drawable/pdf_border"
        android:hint="Enter book name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_alert"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imgCross"
        android:layout_alignParentRight="true"
        android:background="@drawable/alert_error"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txt_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload PDF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/edtPdfName"/>

    <ImageView
        android:id="@+id/pdf_upload"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txt_upload"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/pdf4"
        />
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/pdf_upload"
        android:layout_margin="5dp">
    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/list"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list"
            android:textColor="#fff"
            android:background="@drawable/button_border"
            android:text="Upload"/>
    </LinearLayout>
</RelativeLayout>